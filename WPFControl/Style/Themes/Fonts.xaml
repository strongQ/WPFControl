<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <sys:Double x:Key="DefaultSmalFontSize">14</sys:Double>
    <!-- 字体类型 -->
    <FontFamily x:Key="FontFamily">Microsoft YaHei</FontFamily>

    <!--“普通”的字体大小 -->
    <sys:Double x:Key="DefaultFontSize">16</sys:Double>

    <!--“较小”的字体大小 -->
    <sys:Double x:Key="SmallFontSize">14</sys:Double>

    <!--“较大”的字体大小 -->
    <sys:Double x:Key="LargerFontSize">18</sys:Double>

    <!--“标题”的字体大小 -->
    <sys:Double x:Key="HeaderFontSize">18</sys:Double>

    <!--“标题”的字体大小2 -->
    <sys:Double x:Key="HeaderFontSize2">25</sys:Double>
</ResourceDictionary>